<% include ./partials/header %>
<div class="container">
    
    <div class="row text-center">
        <h1>Register Form</h1>
        <div style="text-align: center; padding-top: 35px; margin: 0 auto;">
            <form action="/register" method="post"  onsubmit="sConsole(event)">
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="username" placeholder="username" required>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" id="password" onclick="toggle()" on type="password" name="password" placeholder="password" required>
                    <h6 class="pull-left" id="displaypassworderror"></h6>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="firstName" placeholder="first name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="lastName" placeholder="last name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="email" name="email" placeholder="email" required>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="avatar" placeholder="avatar url" >
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="adminCode" placeholder="admin code">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
            </form>
            <a class="btn btn-primary btn-large" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

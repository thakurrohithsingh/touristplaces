<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
        <h1>End Date for Registration</h1>
        <div style="text-align: center; width: 0 auto; padding-top: 35px;">
            <form action="/campgrounds/<%= campground._id %>/addtimer" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="month"  placeholder="January" style="height:40px; width:100%;" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="date"  placeholder="26" style="height:40px; width:100%;" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class = "btn btn-primary btn-large" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

    
<% include ../partials/footer %>


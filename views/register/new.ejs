<% include ../partials/header %>

<div class="container">
    
    <div class="row text-center">
        <h1>Register for a new trip in  "<%= campground.location %>"</h1>
        <div style="text-align: center; padding-top: 35px; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/register/<%= user._id %>?_method=PUT" method="POST" id="theform">
                <div class="form-group">
                        <input class="form-control" style="height: 40px;width: 100%;" type="text" name="username" value="<%= user.username %>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" style="height: 40px;width: 100%;" type="text" name="firstName" value="<%= user.firstName %>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" style="height: 40px;width: 100%;" type="text" name="lastName" value="<%= user.lastName %>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" style="height: 40px;width: 100%;" type="email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" style="height: 40px;width: 100%;" type="text" name="avatar" value="<%= user.avatar %>" >
                    </div>
                    <div class="form-group">
                        <input class="btn btn-sm btn-primary btn-block" type="submit" id="registerid" value="SignUp" />
                    </div>
            </form>
            <a class="pull-left" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>

